@{
    ViewBag.Title = "Calculator1";
}
    <section class="ui-widget-content calc pure-g-r" id="calcMortgage" style="text-align: center;">
        <section class="pure-u-1 left">
            <section class="inner">
                <section style="display: block; border-radius: 4px; background-color: #f3f3f3; padding: 20px; margin-bottom: 20px">
                    This utility will allow you to calculate your approximate loan payment based on factors that you input, 
                such as different loan amounts, loan terms, interest rates, taxes and insurance.
                <br>
                    <br>
                    <section style="color: #fff; border-radius: .25em; font-weight: 700; background-color: #B0B8C9; padding: 5px">
                        <strong>*</strong> Do not use commas in your figure
                    </section>
                </section>
                <aside class="pure-u-1-3">
                    <aside class="inner">
                        <strong>Loan Amount:</strong><br>
                        <input onchange="dosumMortgageCalc()" class="pure-u-2-3" size="7" value="100000" name="LA" id="LA" />
                    </aside>
                </aside>
                <aside class="pure-u-1-3">
                    <aside class="inner">
                        <strong>Term in Years:</strong><br>
                        <input onchange="dosumMortgageCalc()" class="pure-u-2-3" size="6" value="30" name="YR" id="YR" />
                    </aside>
                </aside>
                <aside class="pure-u-1-3">
                    <aside class="inner">
                        <strong>Interest Rate:</strong><br>
                        <input onchange="dosumMortgageCalc()" class="pure-u-2-3" size="6" value="8.0" name="IR" id="IR" />
                    </aside>
                </aside>
                <aside class="pure-u-1-3">
                    <aside class="inner">
                        <strong>Annual Tax:</strong><br>
                        <input onchange="dosumMortgageCalc()" class="pure-u-2-3" size="6" value="1000" name="AT" id="AT">
                    </aside>
                </aside>
                <aside class="pure-u-1-3">
                    <aside class="inner">
                        <strong>Annual Insurance:</strong><br>
                        <input onchange="dosumMortgageCalc()" class="pure-u-2-3" size="6" value="300" name="AI" id="AI">
                    </aside>
                </aside>
                <aside class="pure-u-1-3">
                    <aside class="inner">
                        <strong style="color: transparent !important; visibility: hidden">Annual Insurance:</strong><br>
                        <input name="BUTTON" type="button" class="Calc_Button" onclick="dosumMortgageCalc()" value="Calculate">
                    </aside>
                </aside>
                <section style="margin-top: 20px; background-color: #f3f3f3; border-radius: 4px" class="center pure-u-1">
                    <section class="inner">
                        <h1>Results:</h1>
                        <aside class="pure-u-1-2 right center-phone">
                            <aside class="inner">
                                <span>Monthly Principal and Interest:</span>
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 left center-phone">
                            <aside class="inner">
                                <input name="PI" class="style9" size="10" id="PI" />
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 right center-phone">
                            <aside class="inner">
                                <span>Monthly Tax:</span>
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 left center-phone">
                            <aside class="inner">
                                <input name="MT" class="style9" size="10" id="MT" />
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 right center-phone">
                            <aside class="inner">
                                <span>Monthly Insurance:</span>
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 left center-phone">
                            <aside class="inner">
                                <input name="MI" class="style9" size="10" id="MI" />
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 right center-phone">
                            <aside class="inner">
                                <span>Total Payment:</span>
                            </aside>
                        </aside>
                        <aside class="pure-u-1-2 left center-phone">
                            <aside class="inner">
                                <input name="MP" class="style9" size="10" id="MP" />
                            </aside>
                        </aside>

                        </aside>
                    </aside>

                    <section style="color: #fff; border-radius: .25em; font-weight: 700; background-color: #B0B8C9; padding: 5px; margin-top: 20px">
                        * Figures are an estimate and should be verified with a mortgage lender.
                    </section>
                    </section>
                </section>
            </section>